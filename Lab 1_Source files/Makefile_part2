# Makefile - builds CS6015 Project
#
# To build a target, enter:
# make printM
#
# Targets:
# printM - If those file exist then compile and link together
#OBJS = Caps.o Clothing.o main.o Pants.o
# $^ specify all .o file it mentions
# $@ Take the "printM" as output file name

CXX = c++
#HEADERS = Caps.h Clothing.h Pants.h

CXXFLAGS = --std=c++14
CXXSOURCE = Caps.cpp Clothing.cpp main.cpp Pants.cpp

program: Caps.o Clothing.o Pants.o main.o
	$(CXX) $(CXXFLAGS) main.o Caps.o Clothing.o Pants.o -o program

Caps.o: Caps.h
Clothing.o: Clothing.h
Pants.o: Pants.h

printM:
	@echo ${HEADERS}
	@echo ${CXXSOURCE}

.PHONY: clean
clean:
	rm -f *.o *.out program
	
